<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexeymukhin.yandextranslator">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TranslatorModule.TranslatorActivity">
        </activity>
        <activity android:name=".StoryModule.StoryActivity" />
        <activity
            android:name=".SelectLanguageModule.SelectLanguageActivity"
            android:parentActivityName=".TranslatorModule.TranslatorActivity"></activity>
        <activity android:name=".LoadingModule.LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>